{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "start",
      "postDebugTask": "terminate:tasks",
      "serverReadyAction": {
        "action": "debugWithChrome",
        "webRoot": "${workspaceFolder}",
        "killOnServerStop": true
      }
    }
  ]
}
